<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <Button
        android:id="@+id/buttonDeleteHistory"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/buttonHistory"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/buttonHistory"
        android:layout_weight="1"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="@string/buttonDelHistoryTxt" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:background="@color/aqua"
        android:onClick="onClick"
        android:text="@string/buttonHistoryTxt" />

    <Button
        android:id="@+id/buttonCurrentMeasurements"
        android:layout_width="174dp"
        android:layout_height="66dp"
        android:layout_above="@+id/buttonChangeInterval"
        android:layout_toEndOf="@+id/IntervalText"
        android:layout_weight="1"
        android:background="@color/lime"
        android:onClick="onClick"
        android:text="@string/buttonCurMeasTxt" />

    <Button
        android:id="@+id/buttonChangeInterval"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonHistory"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="@string/buttonChangeIntervalTxt" />


    <EditText
        android:id="@+id/IntervalText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonChangeInterval"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/buttonChangeInterval"
        android:singleLine="true"
        android:digits="0123456789"
        android:maxLength="3"
        android:imeOptions="actionDone" />/>

    <TextView
        android:id="@+id/MinutestextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IntervalText"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/IntervalText"
        android:text="@string/default_minutes_string" />

    <TextView
        android:id="@+id/MainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonChangeInterval"
        android:layout_marginTop="7dp"
		android:scrollbars = "vertical"
        android:text="@string/default_empty_string" />

</RelativeLayout>
